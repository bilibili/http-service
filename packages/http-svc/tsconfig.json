{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "types/*": ["types/*"]
    },
    "noImplicitAny": false,
    "moduleResolution": "node",
  },
  "include": ["src", "__tests__", "src/__tests__/.spec.ts"],
  "exclude": ["types"]
}